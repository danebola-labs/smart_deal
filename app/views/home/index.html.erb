</style>

<script>
// Upload functionality - Figma Design
document.addEventListener('DOMContentLoaded', function() {
  const uploadArea = document.getElementById('uploadArea');
  const uploadButton = document.getElementById('uploadButton');
  const fileInput = document.getElementById('fileInput');
  const dashedBorder = document.querySelector('.upload-dashed-border');
  const previewPlaceholder = document.getElementById('previewPlaceholder');
  const previewContent = document.getElementById('previewContent');
  const fileName = document.getElementById('fileName');
  const fileSize = document.getElementById('fileSize');

  function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
  }

  function handleFile(file) {
    console.log('File selected:', file.name);
    
    // Update preview
    if (previewPlaceholder && previewContent) {
      previewPlaceholder.style.display = 'none';
      previewContent.style.display = 'flex';
    }
    
    if (fileName) {
      fileName.textContent = file.name;
    }
    
    if (fileSize) {
      fileSize.textContent = formatFileSize(file.size);
    }

    // TODO: Implement file upload logic
    // Here you can send the file to your Rails backend using FormData
    // Example:
    // const formData = new FormData();
    // formData.append('document[file]', file);
    // fetch('/documents', { method: 'POST', body: formData })
  }

  // Click to upload - area
  if (uploadArea && fileInput) {
    uploadArea.addEventListener('click', function(e) {
      // Don't trigger if clicking the button
      if (e.target !== uploadButton && !uploadButton.contains(e.target)) {
        fileInput.click();
      }
    });
  }

  // Click to upload - button
  if (uploadButton && fileInput) {
    uploadButton.addEventListener('click', function(e) {
      e.stopPropagation();
      fileInput.click();
    });
  }

  // Drag and drop
  if (dashedBorder) {
    dashedBorder.addEventListener('dragover', function(e) {
      e.preventDefault();
      e.stopPropagation();
      dashedBorder.style.borderColor = '#2563eb';
      dashedBorder.style.backgroundColor = '#eff6ff';
    });

    dashedBorder.addEventListener('dragleave', function(e) {
      e.preventDefault();
      e.stopPropagation();
      dashedBorder.style.borderColor = '#cbd5e0';
      dashedBorder.style.backgroundColor = '#f7fafc';
    });

    dashedBorder.addEventListener('drop', function(e) {
      e.preventDefault();
      e.stopPropagation();
      dashedBorder.style.borderColor = '#cbd5e0';
      dashedBorder.style.backgroundColor = '#f7fafc';
      
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        handleFile(files[0]);
      }
    });
  }

  // File input change
  if (fileInput) {
    fileInput.addEventListener('change', function(e) {
      if (e.target.files.length > 0) {
        handleFile(e.target.files[0]);
      }
    });
  }
});
</script>



