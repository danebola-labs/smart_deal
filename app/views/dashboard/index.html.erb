<div class="min-h-screen bg-gray-100 py-8">
    <div class="max-w-7xl mx-auto px-4">
  
      <!-- HEADER -->
      <div class="mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">Cost Dashboard</h1>
        <p class="text-gray-600 text-sm">Usage monitoring for your Knowledge Base</p>
      </div>
  
      <!-- DAILY METRICS CARDS -->
      <!-- Each card uses a shared partial -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-8">
  
        <%= render partial: "metric_card", locals: {
          title: "Tokens Today",
          value: number_with_delimiter(@current_metrics[:today_tokens]),
          color: "text-blue-600"
        } %>
  
        <%= render partial: "metric_card", locals: {
          title: "Cost Today",
          value: "$#{@current_metrics[:today_cost].round(4)}",
          color: "text-red-600"
        } %>
  
        <%= render partial: "metric_card", locals: {
          title: "Queries Today",
          value: @current_metrics[:today_queries],
          color: "text-green-600"
        } %>
  
        <!-- Aurora ACU with explanation -->
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="text-sm text-gray-500">Aurora ACU</div>
          <div class="text-2xl font-bold text-purple-600">
            <%= @current_metrics[:aurora_acu].round(1) %>
          </div>
          <% if @current_metrics[:aurora_acu] == 0.0 %>
            <div class="text-xs text-gray-400 mt-1">
              üí§ Pausado (normal)
            </div>
          <% end %>
        </div>

        <!-- S3 Documents with size -->
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="text-sm text-gray-500">Documentos S3</div>
          <div class="text-2xl font-bold text-yellow-600">
            <%= @current_metrics[:s3_documents].to_i %>
          </div>
          <div class="text-xs text-gray-400 mt-1">
            üìÑ <%= @current_metrics[:s3_size_mb] %> MB
          </div>
        </div>

        <!-- S3 Total Size -->
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="text-sm text-gray-500">S3 Total Size</div>
          <div class="text-2xl font-bold text-indigo-600">
            <%= @current_metrics[:s3_size_mb] %> MB
          </div>
          <div class="text-xs text-gray-400 mt-1">
            <%= @current_metrics[:s3_size_gb].round(2) %> GB
          </div>
        </div>
  
      </div>
  
      <!-- MONTHLY TOTALS PANEL + CHART -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
  
        <!-- Monthly totals summary -->
        <div class="bg-white p-6 rounded-xl shadow">
          <h3 class="text-lg font-semibold text-gray-800 mb-3">Monthly Summary</h3>
  
          <div class="space-y-2 text-sm">
            <div class="flex justify-between">
              <span class="text-gray-600">Tokens:</span>
              <span class="font-bold"><%= number_with_delimiter(@monthly_totals[:total_tokens]) %></span>
            </div>
  
            <div class="flex justify-between">
              <span class="text-gray-600">Cost:</span>
              <span class="font-bold text-red-600">$<%= @monthly_totals[:total_cost].round(2) %></span>
            </div>
  
            <div class="flex justify-between">
              <span class="text-gray-600">Queries:</span>
              <span class="font-bold"><%= @monthly_totals[:total_queries] %></span>
            </div>
  
            <div class="flex justify-between">
              <span class="text-gray-600">Average ACU:</span>
              <span class="font-bold"><%= @monthly_totals[:avg_acu] %></span>
            </div>
          </div>
        </div>
  
        <!-- 30-day cost chart -->
        <div class="md:col-span-3 bg-white p-6 rounded-xl shadow">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Cost Last 30 Days</h3>
          <canvas id="costsChart" height="120"></canvas>
        </div>
      </div>
  
      <!-- MODEL USAGE SECTION (if any Bedrock queries exist) -->
      <% if BedrockQuery.exists? %>
        <div class="bg-white p-6 rounded-xl shadow mb-8">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">Model Usage (Last 24h)</h3>

          <!-- Cards per model -->
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
            <% BedrockQuery.where(created_at: 24.hours.ago..Time.current)
                            .group(:model_id)
                            .sum('input_tokens + output_tokens')
                            .each do |model, tokens| %>

              <div class="p-4 bg-gray-50 rounded-lg text-center">
                <p class="text-sm text-gray-500">
                  <%= model.include?("haiku") ? "Claude Haiku" : "Claude Sonnet" %>
                </p>
                <p class="text-xl font-bold text-gray-900">
                  <%= number_with_delimiter(tokens) %>
                </p>
                <p class="text-xs text-gray-400">tokens</p>
              </div>

            <% end %>
          </div>
        </div>
      <% end %>

      <!-- S3 DOCUMENTS LIST SECTION -->
      <% if @s3_documents_list.any? %>
        <div class="bg-white p-6 rounded-xl shadow mb-8">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">üìÅ S3 Documents</h3>
          
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Document</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Size</th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Modified</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @s3_documents_list.each do |doc| %>
                  <tr>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <div class="text-sm font-medium text-gray-900">
                        <%= doc[:name] %>
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= doc[:full_path] %>
                      </div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap">
                      <div class="text-sm text-gray-900">
                        <%= doc[:size_mb] %> MB
                      </div>
                      <div class="text-xs text-gray-500">
                        <%= number_to_human_size(doc[:size_bytes]) %>
                      </div>
                    </td>
                    <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                      <%= doc[:modified] ? doc[:modified].strftime("%Y-%m-%d %H:%M") : "N/A" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          
          <div class="mt-4 text-sm text-gray-500">
            Total: <%= @s3_documents_list.count %> documents, <%= @current_metrics[:s3_size_mb] %> MB
          </div>
        </div>
      <% end %>

      <!-- PERFORMANCE METRICS SECTION -->
      <% if @performance_metrics[:total_queries] > 0 %>
        <div class="bg-white p-6 rounded-xl shadow mb-8">
          <h3 class="text-lg font-semibold text-gray-800 mb-4">‚ö° Performance Metrics (Today)</h3>
          
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="p-4 bg-gray-50 rounded-lg">
              <div class="text-sm text-gray-500">Average Latency</div>
              <div class="text-2xl font-bold text-gray-900">
                <%= @performance_metrics[:avg_latency] %>ms
              </div>
            </div>
            
            <div class="p-4 bg-gray-50 rounded-lg">
              <div class="text-sm text-gray-500">Fastest Query</div>
              <div class="text-2xl font-bold text-green-600">
                <%= @performance_metrics[:fastest_query] %>ms
              </div>
            </div>
            
            <div class="p-4 bg-gray-50 rounded-lg">
              <div class="text-sm text-gray-500">Slowest Query</div>
              <div class="text-2xl font-bold text-red-600">
                <%= @performance_metrics[:slowest_query] %>ms
              </div>
            </div>
          </div>
        </div>
      <% end %>
  
      <!-- REFRESH BUTTON (pull metrics from AWS) -->
      <div class="text-center mt-10">
        <%= button_to "Refresh Metrics",
            dashboard_refresh_path,
            method: :post,
            class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 shadow",
            data: { disable_with: "Refreshing..." } %>
      </div>
  
    </div>
  </div>
  
